<h1>Draft</h1>

<table border="2">
  <tr>  
    <th>To email</th>
    <th>Subject</th>
    <th>Html body</th>
    <th>Text body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @drafts.each do |draft| %>
  <tr>
    <td><%= draft.to_email %></td>
    <td><%= draft.subject %></td>
    <td><%= draft.html_body %></td>
    <td><%= draft.text_body %></td>
    <td><%= link_to 'Edit', edit_draft_path(draft) %></td>
    <td><%= link_to 'Discard', draft, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Mail', new_draft_path %>